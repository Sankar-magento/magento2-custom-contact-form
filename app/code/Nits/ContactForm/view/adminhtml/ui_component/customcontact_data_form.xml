<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">customcontact_data_form.customcontact_data_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Data Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Nits\ContactForm\Block\Adminhtml\Data\Edit\Buttons\Back" />
            <button name="delete" class="Nits\ContactForm\Block\Adminhtml\Data\Edit\Buttons\Delete" />
            <button name="reset" class="Nits\ContactForm\Block\Adminhtml\Data\Edit\Buttons\Reset" />
            <button name="save" class="Nits\ContactForm\Block\Adminhtml\Data\Edit\Buttons\Save" />
            <button name="save_and_continue" class="Nits\ContactForm\Block\Adminhtml\Data\Edit\Buttons\SaveAndContinue" />
        </buttons>
        <namespace>customcontact_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>customcontact_data_form.customcontact_data_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="customcontact_data_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="customcontact/data/save"/>
        </settings>
        <dataProvider class="Nits\ContactForm\Model\DataProvider" name="customcontact_data_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="data_details">
        <settings>
            <label/>
        </settings>
        <field name="id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>id</dataScope>
            </settings>
        </field>
        <field name="firstname" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">First Name</label>
                <dataScope>firstname</dataScope>
            </settings>
        </field>
        <field name="lastname" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Last Name</label>
                <dataScope>lastname</dataScope>
            </settings>
        </field>
        <field name="email" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Email</label>
                <dataScope>email</dataScope>
            </settings>
        </field>
        <field name="phone" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Phone</label>
                <dataScope>phone</dataScope>
            </settings>
        </field>
        <field name="comment" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>textarea</dataType>
                <label translate="true">Comment</label>
                <dataScope>comment</dataScope>
            </settings>
        </field>
    </fieldset>
</form>